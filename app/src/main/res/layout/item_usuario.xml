<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/imgFotoPerfil"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_perfil"
    android:background="@drawable/circle_background"
    android:contentDescription="Foto de perfil"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

    <!-- Nombre completo -->
    <TextView
        android:id="@+id/tvNombreCompleto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Juan Pérez López"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/imgFotoPerfil"
        app:layout_constraintTop_toTopOf="@id/imgFotoPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="12dp" />

    <!-- Institución -->
    <TextView
        android:id="@+id/tvInstitucion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Universidad Nacional"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/tvNombreCompleto"
        app:layout_constraintStart_toStartOf="@id/tvNombreCompleto"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageButton
        android:id="@+id/buttonVerMas"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_irarchivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
